<UserControl x:Class="MainModule.Views.ProfilView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControlLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="300"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Content="Déconnexion" Command="{Binding BackCommand}"
            Margin="10" Height="30" Width="100" HorizontalAlignment="Left" />

        <Image Source="/ProjetWpf;component/icon.png" Grid.Row="1" Width="350" />

        <Label Content="{Binding Welcome}" Grid.Row="2" FontSize="45" HorizontalAlignment="Center"></Label>
    </Grid>
</UserControl>