<UserControl x:Class="MainModule.Views.PatientsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <DataTemplate x:Key="PatientListTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Name}"></TextBlock>
                <TextBlock Text=" - "></TextBlock>
                <TextBlock Text="{Binding Path=Firstname}"></TextBlock>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="PatientInfoTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Path=Name}"></TextBlock>
                <TextBlock Text="{Binding Path=Firstname}"></TextBlock>
                <TextBlock Text="{Binding Path=Birthday}"></TextBlock>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <ListBox ItemsSource="{Binding Patients}" ItemTemplate="{StaticResource PatientListTemplate}"
                 SelectionMode="Single" SelectedItem="{Binding SelectedPatient}"></ListBox>
        <ContentControl Content="{Binding SelectedPatient}"
                        ContentTemplate="{StaticResource PatientInfoTemplate}"></ContentControl>
    </StackPanel>
</UserControl>